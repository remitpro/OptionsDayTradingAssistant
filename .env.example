# TD Ameritrade API Configuration
# Get your API key from: https://developer.tdameritrade.com/

TDA_API_KEY=your_api_key_here
TDA_REDIRECT_URI=https://localhost
TDA_TOKEN_PATH=./config/token.json

# Trading Parameters
MIN_STOCK_PRICE=20
MAX_STOCK_PRICE=300
MIN_AVG_VOLUME=1000000
VOLUME_MULTIPLIER=1.3
